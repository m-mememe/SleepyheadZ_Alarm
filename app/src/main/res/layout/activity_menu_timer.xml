<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/tv_start_time"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_blue"
        android:onClick="setStartTimeHour"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_colon"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bt_start_time_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_blue"
        android:onClick="setStartTimeMinute"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/tv_end_time"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_end_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_colon"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_end_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_alarm_time"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/bt_alarm_time_minus20"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmTimeMinus20"
        android:text="@string/bt_time_minus20"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_alarm_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/bt_alarm_time_minus5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmTimeMinus5"
        android:text="@string/bt_time_minus5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_time_minus20"
        app:layout_constraintStart_toEndOf="@+id/bt_alarm_time_minus20" />

    <TextView
        android:id="@+id/tv_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_minute"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_time_minus20"
        app:layout_constraintEnd_toStartOf="@+id/bt_alarm_time_plus5" />

    <Button
        android:id="@+id/bt_alarm_time_plus5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmTimePlus5"
        android:text="@string/bt_time_plus5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_time_minus20"
        app:layout_constraintEnd_toStartOf="@+id/bt_alarm_time_plus20" />

    <Button
        android:id="@+id/bt_alarm_time_plus20"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmTimePlus20"
        android:text="@string/bt_time_plus20"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_time_minus20"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_alarm_count"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_time" />

    <Button
        android:id="@+id/bt_alarm_count_minus20"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmCountMinus3"
        android:text="@string/bt_count_minus3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_alarm_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/bt_alarm_count_minus5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmCountMinus1"
        android:text="@string/bt_count_minus1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_count_minus20"
        app:layout_constraintStart_toEndOf="@+id/bt_alarm_count_minus20" />

    <TextView
        android:id="@+id/tv_alarm_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_count"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_count_minus20"
        app:layout_constraintEnd_toStartOf="@+id/bt_alarm_count_plus5" />

    <Button
        android:id="@+id/bt_alarm_count_plus5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmCountPlus1"
        android:text="@string/bt_count_plus1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_count_minus20"
        app:layout_constraintEnd_toStartOf="@+id/bt_alarm_count_plus20" />

    <Button
        android:id="@+id/bt_alarm_count_plus20"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_background_blue"
        android:onClick="alarmCountPlus3"
        android:text="@string/bt_count_plus3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alarm_count_minus20"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onBackButtonClick"
        android:text="@string/bt_back"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/bt_OK"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_count" />

    <Button
        android:id="@+id/bt_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onOKButtonClick"
        android:text="@string/bt_OK"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_back" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:onClick="onDeleteButtonClick"
        android:text="@string/bt_delete"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_OK" />
</androidx.constraintlayout.widget.ConstraintLayout>